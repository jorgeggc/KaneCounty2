@model IEnumerable<WebApplication.Models.EmployeeModel>
@{
    ViewData["Title"] = "viewEmployees";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdentifictionCardID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CourtAccessRequired)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IDCardNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdentifictionCardID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CourtAccessRequired)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IDCardNumber)
            </td>
        </tr>
}
    </tbody>
</table>
